<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subSquareGameCentre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubtractSquareGame.SubtractSquareGameCentreActivity">

    <TextView
        android:id="@+id/subSquareGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="70dp"
        android:text="Subtract Square"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SSScoreBoard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="108dp"
        android:text="Game Score Board"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onclickGameScoreBoard"/>

    <Button
        android:id="@+id/NewSSGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="64dp"
        android:text="New Game"
        app:layout_constraintBottom_toTopOf="@+id/SSScoreBoard"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onclickNewGame"/>
</android.support.constraint.ConstraintLayout>
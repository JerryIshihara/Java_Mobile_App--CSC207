<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slidingtiles.SlidingtileSelectSizeActivity">

    <Button
        android:id="@+id/size3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="67dp"
        android:text="Size 3"
        app:layout_constraintBottom_toTopOf="@+id/size4"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onclickSizeThree"/>

    <Button
        android:id="@+id/size4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="74dp"
        android:text="Size 4"
        app:layout_constraintBottom_toTopOf="@+id/size5"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onclickSizeFour"/>

    <Button
        android:id="@+id/size5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="199dp"
        android:text="Size 5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onclickSizeFive"/>

    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        android:text="@string/goback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onclickGoBack"/>
</android.support.constraint.ConstraintLayout>